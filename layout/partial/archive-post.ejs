<% page.posts.each(function(post){ %>
	<%- partial('article-shot', {post: post, index: true}) %>
<% }) %>
<% if (page.total > 0 ) { %>
<nav><ul class="pagination">
	<%
		var from,to;
		if (page.total < 7) from=1,to=page.total;
		else{
			from = page.current -3 ;
			if(from<1) from =1;
			to = from + 6;
			if(to > page.total ) to=page.total ;
			from = to - 6;
			if(from<1) from = 1;
		}
	%>
	<% if (from > 1) { %><li class="page-item"><a aria-label="First Page" class="page-link" href="<%= config.url %>"><i class="fa fa-angle-double-left" aria-hidden="true"></i></a></li><% } %>
	<% if (page.prev != 0) { %><li class="page-item"><a aria-label="Previous Page" class="page-link" href="<%= config.url %>/<%= page.prev_link %>"><i class="fa fa-angle-left" aria-hidden="true"></i></a></li><% } %>
	<% for (var i = from ; i < page.current ; i ++) { %>
		<% if (i == 1) { %>
		<li class="page-item"><a class="page-link" href="<%= config.url %>">1</a></li>
		<% } else { %>
		<li class="page-item"><a class="page-link" href="<%= config.url %>/page/<%= i %>"><%= i %></a></li>
		<% } %>
	<% } %>
		<li class="page-item active"><span class="page-link" style="cursor: default;"><%= i %></span></li>
	<% for (var i = page.current + 1 ; i <= to ; i ++) { %>
		<li class="page-item"><a class="page-link" href="<%= config.url %>/page/<%= i %>"><%= i %></a></li>
	<% } %>
	<% if (page.next != 0) { %><li class="page-item"><a aria-label="Next Page" class="page-link" href="<%= config.url %>/<%= page.next_link %>"><i class="fa fa-angle-right" aria-hidden="true"></i></a></li><% } %>
	<% if (to < page.total) { %><li class="page-item"><a aria-label="Last Page" class="page-link" href="<%= config.url %>/page/<%= page.total %>"><i class="fa fa-angle-double-right" aria-hidden="true"></i></a></li><% } %>
</ul></nav>
<nav><ul class="pagination pagination-mobile">
	<%
		var from,to;
		if (page.total < 5) from=1,to=page.total;
		else{
			from = page.current -2 ;
			if(from<1) from =1;
			to = from + 4;
			if(to > page.total ) to=page.total ;
			from = to - 4;
			if(from<1) from = 1;
		}
	%>
	<% if (from > 1) { %><li class="page-item"><a aria-label="First Page" class="page-link" href="<%= config.url %>"><i class="fa fa-angle-double-left" aria-hidden="true"></i></a></li><% } %>
	<% if (page.prev != 0) { %><li class="page-item"><a aria-label="Previous Page" class="page-link" href="<%= config.url %>/<%= page.prev_link %>"><i class="fa fa-angle-left" aria-hidden="true"></i></a></li><% } %>
	<% for (var i = from ; i < page.current ; i ++) { %>
		<% if (i == 1) { %>
		<li class="page-item"><a class="page-link" href="<%= config.url %>">1</a></li>
		<% } else { %>
		<li class="page-item"><a class="page-link" href="<%= config.url %>/page/<%= i %>"><%= i %></a></li>
		<% } %>
	<% } %>
		<li class="page-item active"><span class="page-link" style="cursor: default;"><%= i %></span></li>
	<% for (var i = page.current + 1 ; i <= to ; i ++) { %>
		<li class="page-item"><a class="page-link" href="<%= config.url %>/page/<%= i %>"><%= i %></a></li>
	<% } %>
	<% if (page.next != 0) { %><li class="page-item"><a aria-label="Next Page" class="page-link" href="<%= config.url %>/<%= page.next_link %>"><i class="fa fa-angle-right" aria-hidden="true"></i></a></li><% } %>
	<% if (to < page.total) { %><li class="page-item"><a aria-label="Last Page" class="page-link" href="<%= config.url %>/page/<%= page.total %>"><i class="fa fa-angle-double-right" aria-hidden="true"></i></a></li><% } %>
</ul></nav>		
<% } %>